<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/normal_btn"
        android:id="@+id/btn_1"
        android:onClick="onClick"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/normal_btn_new_callback"
        android:id="@+id/btn_2"/>    
    
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_btn"
        android:id="@+id/btn_progress"
        android:onClick="onClickProgress"/>    
  
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_btn_running"
        android:id="@+id/btn_progress_running"
        android:onClick="onClickProgressRunning"/>    
    
    
    
</LinearLayout>
